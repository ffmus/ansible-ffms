# Globale Variablen für alle Server der Domäne 01

# Eindeutige ID der Domäne
domaenen_id: 1

# Nummer der Routing Tabelle, die auf den Servern verwendet wird 
routing_table: 42

# Hostgruppen, mit denen ein GRE-Tunnel aufgebaut werden soll
gre_ffms:
  groups: "{{groups['domaene-01']}} + {{groups['services']}}"

# Parameter für das eigene Freifunk-Netzwerk
ff_network:
  # IPv4 Adressraum
  v4_network: 10.43.8.0/21

  # IPv6 adressraum
  v6_network: 2a03:2260:115:100::/64 


# Konfigurationen für die Verbindung zum Freifunk Rheinland 
ffrl:

  # AS Nummer des Freifunk Rheinland 
  as_number: 201701

  # MTU der GRE Tunnel
  tun_mtu: 1400   


# Batman Einstellungen 
batman:
  # Bandbreite, die Batman annoncieren soll
  downstream: 1024Mbit
  # Bandbreite, die Batman annoncieren soll 
  upstream: 1024Mbit 


# Einstellungen für DHCP Server 
dhcp:
  # MTU, die an die Clients im Netzwerk propagiert wird
  mtu: 1280 
  # Default-Lease Time 
  lease_default: 3600
  # Maximale Lease Time
  lease_max: 10800 
 
# Trägt statisches Lease in alle DHCP Server der Domäne ein, sowie ein DNS Eintrag im DNS Server. Die Entsprechenden Rollen müssen auf den entsprechenden Maschinen ausgeführt werden.
#static_hosts:
# - name: descilla
#   v4_address: 10.43.8.42
#   mac_address: d0:e1:40:XX:XX:XX


# Einstellungen für fastd
fastd:
  # Port auf dem fastd laufen soll
  port: 14250
  # soll fastd traffic über iptables rule 42 laufen (nur bei backbone server)
  ip_rule_42: False


# Collectd Konfiguration 
collectd:
  collect_dhcp: true
  collect_fastd: true
  collect_l2tp: false
  collect_ipv4ipv6: true
  collect_sysctl: true

bind:
  ffms_zone_type: slave
  ffms_zone_masters:
    - 10.43.8.11    
 
